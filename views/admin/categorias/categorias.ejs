<%- include('../header.ejs') %>

<main id="main">
  <section class="breadcrumbs">
    <div class="container">
      <div class="d-flex justify-content-between align-items-center">
        <h2>Admin Area</h2>
        <ol>
          <li><a href="/admin">Admin Area</a></li>
          <li>Gerenciamento de Categorias</li>
        </ol>
      </div>
    </div>
  </div>
  </section><!-- End Breadcrumbs -->

  <section class="inner-page why-us">
    <div class="container">
      <div class="row no-gutters">
        <% categorias.forEach(categoria => { %>
          <div class="col-lg-4 col-md-6 content-item">
            <h3><%- categoria.categoria %></h3>
            <a class="px-md-4" href="/admin/categorias/delete/<%- categoria.id %>">Excluir</a>
            <a class="px-md-4" href="/admin/categorias/editar/<%- categoria.id %>">Editar</a>
          </div>
       <% }) %>
      </div>
    </div>
  </section>
</main><!-- End #main -->

<%- include('../footer') %> 